<?xml version="1.0"?>
<launch>

    <param name="maxlen"               type="double" value="100.0" />    
    <param name="minlen"               type="double" value="4.0" />    
    <param name="angular_resolution_x" type="double" value="0.5" />
    <param name="angular_resolution_y" type="double" value="0.5"/> 
    <param name="max_angle_width"      type="double" value="360" />
    <param name="max_angle_height"     type="double" value="360" />
    <param name="pcTopic"              type="str"    value="/pc_interpoled" />
    <param name="voxel"                type="bool"    value="true" />
    <param name="groundSurf_fusion"    type="bool"    value="true" />
    
    <node pkg="pc_feature_extraction" type="pc_feature_node" name="pc_feature_node"/> 

    <arg name="rviz" default="false" />
    <group if="$(arg rviz)">
        <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find pc_feature_extraction)/rviz/pc2image_rviz.rviz" />
    </group>
  
</launch>

